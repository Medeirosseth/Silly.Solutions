@{
  Layout = "_Layout";
}
@using Factory.Models;

<div class="container">
  <h2>List of Engineers</h2>
  <div class="container">
    @if (@Model.Count == 0)
    {
      <p>There are no engineers in the database</p>
    }
    else
    {
      <ul>
        @foreach (Engineer engineer in Model)
        {
          <li>
            @Html.ActionLink($"{engineer.EngineerName}", "Details", "Engineers", new { id = engineer.EngineerId}, new {@class = "btn"})
          </li>
        }
      </ul>
    }
  </div>
  @Html.ActionLink("Add Engineer", "Create", "engineers", null, new { @class = "btn"})
  @Html.ActionLink("Home", "Index", "Home", new { @class = "btn btn-primary" })
</div>